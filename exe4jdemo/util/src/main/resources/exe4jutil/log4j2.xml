<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="trace-file">./log/exe4jutil</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <Console name="Tip" target="SYSTEM_OUT">
      <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern=">> %msg%n"/>
    </Console>
    <RollingRandomAccessFile name="Trace" fileName="${trace-file}.log" filePattern="${trace-file}-%d{yyyy-MM-dd}-%i.log" bufferedIO="true">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="100 KB"/>
      </Policies>
    </RollingRandomAccessFile>
  </Appenders>
  <Loggers>
   <Logger name="trial.java.exe4jutil" level="trace" additivity="false">
      <AppenderRef ref="Trace"/>
      <AppenderRef ref="Tip"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>